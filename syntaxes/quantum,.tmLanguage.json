{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Quantum",
    "fileTypes": [
        "qax",
        "qin"
    ],
    "scopeName": "source.quantum",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#labels"
        },
        {
            "include": "#elements"
        },
        {
            "include": "#punctuation"
        },
        {
            "include": "#xx"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "comment": "line comments",
                    "name": "comment.line.quantum",
                    "match": "^(\\/\\*|[Cc]).*$",
                    "captures": {
                        "1": {
                            "name": "punctuation.definition.comment.quantum"
                        }
                    }
                }
            ]
        },
        "labels": {
            "patterns": [
                {
                    "comment": "l statement",
                    "name": "label.statement.quantum",
                    "match": "^l\\s(\\b([[:alpha:]_]\\w*)\\b)"
                }
            ]
        },
        "basic-statements": {
            "patterns": [
                {
                    "comment": "axis n statements",
                    "name": "axis.statement.n.quantum",
                    "match": "^\\b(n[0-9]{2}|m)"
                }
            ]
        },
        "numeric-statements": {
            "patterns": [
                {
                    "comment": "axis numeric statements",
                    "name": "axis.statement.numeric.quantum",
                    "match": "^\\b(col|val|fld)"
                }
            ]
        },
        "punctuation": {
            "patterns": [
                {
                    "comment": "parentheses, round brackets",
                    "name": "punctuation.brackets.round.quantum",
                    "match": "[()]"
                },
                {
                    "comment": "semicolon",
                    "name": "punctuation.semi.quantum",
                    "match": ";"
                },
                {
                    "comment": "dollor brackets",
                    "name": "punctuation.brackets.dollar.quantum",
                    "match": "[$$]"
                }
            ]
        },
        "codesxx": {
            "patterns": [
                {
                    "comment": "characters and bytes",
                    "name": "string.quoted.single.char.quantum",
                    "begin": "(b)?(')",
                    "beginCaptures": {
                        "1": {
                            "name": "string.quoted.byte.raw.quantum"
                        },
                        "2": {
                            "name": "punctuation.definition.char.quantum"
                        }
                    },
                    "end": "'",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.char.quantum"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#escapes"
                        }
                    ]
                }
            ]
        }
    }
}
